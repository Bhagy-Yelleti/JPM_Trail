# ImpactBridge Environment Configuration
# Copy this file to .env and update with your values

# Flask Environment (development, production, testing)
FLASK_ENV=development

# Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-change-in-production

# Database URL
# Development (SQLite)
DATABASE_URL=sqlite:///impactbridge.db

# Production (PostgreSQL example)
# DATABASE_URL=postgresql://username:password@localhost:5432/impactbridge

# Application Settings
DEBUG=True
